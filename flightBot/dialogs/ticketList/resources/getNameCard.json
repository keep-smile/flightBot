{
    "type": "AdaptiveCard",
    "horizontalAlignment": "Center",
    "separator": true,
    "height": "stretch",
    "body": [
        {
            "type": "ColumnSet",
            "horizontalAlignment": "Left",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "extraLarge",
                            "weight": "bolder",
                            "text": "Flight Bot"
                        },
                        {
                            "type": "TextBlock",
                            "size": "medium",
                            "text": "Type name which you used to buy tickets to get list of your buys",
                            "wrap": true
                        }
                    ],
                    "width": "auto"
                }
            ]
        },
		{
			"type": "Input.Text",
			"placeholder": "Please type in your full name..",
			"style": "text",
			"maxLength": 0,
			"id": "userName"
		}
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
                "intent": "TicketList"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}
